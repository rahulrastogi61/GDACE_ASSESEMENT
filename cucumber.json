{
    "default":{
        "timeout": 30000,
        "dryRun":false,
        "formatOptions":{
            "snippetInterface":"async-await"
        },

        "paths":[
            "src/tests/featuresfile/*.*"
        ],
        
        "require":[
            "src/tests/stepsdef/*.ts",
            "src/tests/hooks/hooks.ts"
        ],

        "requireModule":[
            "ts-node/register"],
        "format":[
            "progress-bar",
            "html:test-results/cucumber-report.html",
            "json:test-results/ cucumber-report.json"
        ],

        "parallel":0

    }
   
}